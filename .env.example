# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin Configuration
ADMIN_CHAT_ID=your_admin_chat_id_here

# YooKassa Configuration (Production)
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here

# YooKassa Configuration (Test - optional)
YOOKASSA_TEST_ID=your_test_shop_id_here
YOOKASSA_TEST_KEY=your_test_secret_key_here

# Site Configuration
SITE_URL=https://yourusername.github.io/flexyframe
PORT=3000

# GitHub Token (optional, for private repos)
GITHUB_TOKEN=your_github_token_here

# Support Bot Token (optional, for separate support bot)
SUPPORT_BOT_TOKEN=your_support_bot_token_here

# Webhook Configuration (optional, for automatic payment confirmation)
# Uncomment and set if using webhooks
# WEBHOOK_URL=https://your-domain.com/api/webhook/yookassa
# WEBHOOK_SECRET=your_webhook_secret_here

# YooKassa Webhook Secret Key (recommended)
# Get in YooKassa personal account ' Settings ' Integrations ' Webhooks
YOOKASSA_WEBHOOK_SECRET=your_yookassa_webhook_secret_key

# DPD Configuration (Delivery Service)
# Get your credentials from https://my.dpd.ru/settings/integration
DPD_CLIENT_NUMBER=your_dpd_client_number
DPD_CLIENT_KEY=your_dpd_client_key
DPD_TEST_MODE=true  # Set to 'false' for production
